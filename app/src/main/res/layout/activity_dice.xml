<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Ketqua"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarDice"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:gravity="center"
                android:textColor="#FFEB3B"
                android:textSize="50dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/Xiu"
                    android:button="@null"
                    android:drawableLeft="@drawable/checkdrawable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9C27B0"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/le"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/le"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/Tai"
                    android:button="@null"
                    android:drawableLeft="@drawable/checkdrawable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9C27B0"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/chan"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/chan"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/number1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/number1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/number1"
                    />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:id="@+id/winloss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ToggleButton
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="130dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/start1"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/phantram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:text="50%"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/flag"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:src="@drawable/destination" />

            <ProgressBar
                android:id="@+id/results"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="330dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                android:max="100"
                android:progress="50" />
            />
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>